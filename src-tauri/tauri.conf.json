{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Era",
  "version": "1.3.0",
  "identifier": "cn.tineaine.era",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Era Studio",
        "dragDropEnabled": false,
        "width": 1000,
        "height": 600,
        "shadow": true,
        "resizable": true,
        "minWidth": 1000,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ]
  }
}