{
  "id": "simx.core",
  "name": "simx 核心",
  "func": [
    {
      "handler": "simx.core.debug.print",
      "name": "打印信息",
      "desc": "在控制台打印一段数据",
      "params": [
        {
          "key": "text",
          "name": "文本",
          "desc": "要打印的文本内容，支持表达式",
          "type": "String",
          "default_value": "Hello World",
          "require": true,
          "options": []
        },
        {
          "key": "level",
          "name": "日志等级",
          "desc": "日志打印等级",
          "type": "Select",
          "default_value": "info",
          "require": false,
          "options": [
            {
              "label": "信息",
              "value": "info"
            },
            {
              "label": "警告",
              "value": "warn"
            },
            {
              "label": "错误",
              "value": "fail"
            }
          ]
        }
      ]
    },
    {
      "handler": "simx.core.var.set",
      "name": "设置变量",
      "desc": "创建或修改流变量",
      "params": [
        {
          "key": "val",
          "name": "默认值",
          "desc": "变量的默认值",
          "type": "String",
          "default_value": "hello",
          "require": false,
          "options": []
        },
        {
          "key": "key",
          "name": "变量名",
          "desc": "变量的名称，不能重复",
          "type": "String",
          "default_value": "key",
          "require": true,
          "options": []
        }
      ]
    },
    {
      "handler": "simx.core.debug.node",
      "name": "节点调试",
      "desc": "调试节点的信息",
      "params": []
    },
    {
      "handler": "simx.core.var.remove",
      "name": "移除变量",
      "desc": "移除流程中的某个变量",
      "params": [
        {
          "key": "var_name",
          "name": "参数名称",
          "desc": "要移除的参数名称",
          "type": "String",
          "default_value": "var",
          "require": false,
          "options": []
        }
      ]
    },
    {
      "handler": "simx.core.var.remove_all",
      "name": "清空变量",
      "desc": "清空流中的所有变量",
      "params": []
    },
    {
      "handler": "simx.core.var.watch",
      "name": "变量监听",
      "desc": "监听指定变量的变化",
      "params": []
    },
    {
      "handler": "simx.core.flow.sub_flow",
      "name": "子流程",
      "desc": "调度指定的子流程",
      "params": [
        {
          "key": "steps",
          "name": "步骤内容",
          "desc": "要发起的子流程的数据",
          "type": "String",
          "default_value": "",
          "require": true,
          "options": []
        }
      ]
    },
    {
      "handler": "simx.core.flow.post_flow",
      "name": "流调用",
      "desc": "通过蓝图调用新的流",
      "params": [
        {
          "key": "flow_path",
          "name": "蓝图路径",
          "desc": "要发起的蓝图路径",
          "type": "String",
          "default_value": "",
          "require": true,
          "options": []
        }
      ]
    },
    {
      "handler": "simx.core.flow.timeout",
      "name": "流等待",
      "desc": "让当前流的执行暂停一段时间",
      "params": [
        {
          "key": "sec",
          "name": "等待时间",
          "desc": "要等待的时间，单位秒",
          "type": "Number",
          "default_value": 1,
          "require": true,
          "options": []
        }
      ]
    }
  ]
}